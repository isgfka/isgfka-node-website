{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "watch": [
      "app.js",
      "gulpfile.js",
      "app/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json",
    "legacyWatch": true
  }